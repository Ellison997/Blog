<!-- Post Header -->
<style type="text/css">

    header.intro-header{
        <% if (is_home()) { %>
            background-image: url('<%= config.root + config["home-header-img"] %>') 
            /*config*/
        <%} else if (is_post()){%>
          <% if (page["header-img"]!=null) { %>
            background-image: url('<%= page["header-img"] %>')
        <%} else {%>
             background-image: url('<%= config.root + config["post-header-img"] %>')  
         <%} } else if (is_archive()){%>
            background-image: url('<%= config.root + config["archive-header-img"] %>')  
            /*archive*/
        <%} else if (is_category()){%>
            background-image: url('<%= config.root + config["post-header-img"] %>')  
          /*archive*/
      <%} else {%>
            background-image: url('<%= config.root + page["header-img"] %>')
            /*page*/
        <%} %>
    }
    <% if (config.signature) {%>
    #signature{
        background-image: url('<%= config.root + config["signature-img"] %>');
    }
    <%}%>
</style>

<header class="intro-header" >
    <!-- Signature -->
    <div id="signature">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <% if (is_post()) { %>
                    <!--文章-->
                    <div class="post-heading">
                        <div class="tags">
                            <% page.tags.forEach(function(tag){ %>
                              <a class="tag" href="<%= config.root %>tag/#<%= tag.name %>" title="<%= tag.name %>"><%= tag.name %></a>
                            <% }) %>
                        </div>
                        <h1><%= page.title %></h1>
                        <h2 class="subheading"><%= page.subtitle || "" %></h2>
                        <span class="meta">
                            Posted by <%- page.author || config.author %> on
                            <%= page.date.format(config.date_format) %>
                        </span>
                    </div>
                <% }else if (is_archive()){%>
                    <div class="site-heading">
                        <h1><%= config.archives_title %></h1>
                        <span class="subheading" style="font-weight:500"><%= config.archives_subtitle %></span>
                    </div>
                    <!--archive-->
                    <%}else if (is_category()){%>
                    <div class="site-heading">
                        <h1><%= config.categories_title %></h1>
                        <span class="subheading" style="font-weight:500"><%= config.categories_subtitle %></span>
                    </div>
                    <!--archive-->
                    <%} else { %>
                    <div class="site-heading">
                        <h1><%= page.title || config.title %></h1>
                        <!--<hr class="small">-->
                        <span class="subheading" style="font-weight:500"><%= page.description || config.subtitle || "" %></span>
                    </div>
                <% } %>


                </div>
            </div>
        </div>
    </div>
</header>
